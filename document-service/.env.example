# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=document_service
DATABASE_SSL_MODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=10
DATABASE_MAX_LIFETIME=300

# Server Configuration
SERVER_PORT=8082
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=10
SERVER_WRITE_TIMEOUT=10
SERVER_IDLE_TIMEOUT=60

# Environment
ENVIRONMENT=development

# Azure AD Configuration (for production)
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_APPLICATION_ID=your-azure-application-id

# Security Configuration
SECURITY_ENABLE_AUTH=true
SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SECURITY_ENABLE_CORS=true
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3020,http://localhost:3021
SECURITY_ENABLE_RATE_LIMIT=true
SECURITY_RATE_LIMIT_PER_MIN=100

# Storage Configuration (AWS S3)
STORAGE_PROVIDER=aws
STORAGE_DEFAULT_BUCKET=tesseract-documents
STORAGE_MAX_FILE_SIZE=104857600
STORAGE_VALIDATE_FILE_TYPE=true
STORAGE_ENABLE_VIRUS_SCANNING=false
STORAGE_ENABLE_THUMBNAILS=false
STORAGE_DEFAULT_CACHE_CONTROL=public,max-age=3600

# AWS Configuration
STORAGE_AWS_REGION=us-west-2
STORAGE_AWS_ACCESS_KEY_ID=your-aws-access-key
STORAGE_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
STORAGE_AWS_BUCKET=tesseract-documents
STORAGE_AWS_ENDPOINT=
STORAGE_AWS_FORCE_PATH_STYLE=false

# Azure Configuration (if using Azure Blob Storage)
STORAGE_AZURE_ACCOUNT_NAME=your-storage-account
STORAGE_AZURE_ACCOUNT_KEY=your-storage-key
STORAGE_AZURE_CONTAINER_NAME=documents

# Logging Configuration
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout
LOGGING_TIME_FORMAT=2006-01-02T15:04:05Z07:00